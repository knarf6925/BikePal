<div id="home" class="bg">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>
          <i class="fas fa-bicycle"></i> BikePal</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 table-wrapper-scroll-y">
        <table class="table table-hover table-striped z-depth-5 rounded">
          <thead>
            <tr>
              <th scope="col">Class Date</th>
              <th scope="col">Start Time</th>
              <th scope="col">Class Type</th>
              <th scope="col">Class Level</th>
              <th scope="col">Instructor</th>
              <th scope="col">Seats</th>
              <th scope="col">Reserve Class</th>
            </tr>
          </thead>
          <tbody>
            {{#each schedules}}
              <tr>
                <th scope="row">{{this.class_date}}</th>
                <td>{{this.start_time}}</td>
                <td>{{this.class_type}}</td>
                <td>{{this.class_level}}</td>
                <td>{{this.instructor}}</td>
                <td>{{this.seats}}</td>
                <td>
                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="seats" value="false">
                    <button type="submit" class="btn unique-color-dark btn-sm">Reserve</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>